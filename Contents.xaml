<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Google_Tv_App.Components.Contents">

    <Border x:Name="Border1" Stroke="#E3E2E6" StrokeShape="RoundRectangle 12,12,12,12" HeightRequest="224" WidthRequest="406">
        <Grid>
            <Frame CornerRadius="12" Padding="0">
                <ImageButton x:Name="Button1" BackgroundColor="Transparent" CornerRadius="12" Source="superpuppy.png" VerticalOptions="Fill" HorizontalOptions="FillAndExpand">

                </ImageButton>
            </Frame>

            <VerticalStackLayout Margin="24" HorizontalOptions="Start" VerticalOptions="End" Spacing="4">
                <Label Text="Super Puppy saves the day" TextColor="White" FontSize="11" FontFamily="Inter">

                </Label>
                <Label Text="Super Puppy" TextColor="White" FontSize="26">

                </Label>
            </VerticalStackLayout>
        </Grid>
    </Border>
</ContentView>
